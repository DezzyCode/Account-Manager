<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <CornerRadius x:Key="cr-default" TopLeft="10" TopRight="10" BottomRight="10" BottomLeft="10"/>
    <CornerRadius x:Key="cr-5" TopLeft="5" TopRight="5" BottomRight="5" BottomLeft="5"/>

    <SolidColorBrush x:Key="gray-30" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="gray-50" Color="#323232"/>
    <SolidColorBrush x:Key="gray-60" Color="#313131"/>
    <SolidColorBrush x:Key="gray-80" Color="#FF505050"/>
    <SolidColorBrush x:Key="gray-100" Color="#646464"/>

    <SolidColorBrush x:Key="white-140" Color="#8c8c8c"/>
    <SolidColorBrush x:Key="white-180" Color="#b4b4b4"/>
    <SolidColorBrush x:Key="white-220" Color="#dcdcdc"/>




    <SolidColorBrush x:Key="Border.Primary" Color="#313131"/>
    <SolidColorBrush x:Key="Border.Secoundary" Color="#414141"/>

    <SolidColorBrush x:Key="Foreground.Primary" Color="Gainsboro"/>
    <SolidColorBrush x:Key="Foreground.Secoundary" Color="#FF787878"/>
    <SolidColorBrush x:Key="Foreground.Detail" Color="#CA3E47"/>

    <!--#region Darkmode-->
    <SolidColorBrush x:Key="border-gray-30" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="border-gray-80" Color="#FF505050"/>
    
    <!--#region Lightmode-->
    <SolidColorBrush x:Key="border-white-160" Color="#FFB4B4B4"/>
</ResourceDictionary>