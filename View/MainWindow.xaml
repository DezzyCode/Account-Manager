                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Info" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="GridInfoCell" Loaded="GridInfoCell_Loaded" Focusable="False" Style="{StaticResource Button.Trans.Over140.Pressed80}" ToolTip="{Binding AppInfo}" Height="auto" Width="auto" MouseDoubleClick="CopyBtnAppInfoFromCell_MouseDoubleClick">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <fa:IconImage Icon="ExclamationCircle" IconFont="Solid" Height="16" Width="16" Foreground="Gainsboro"/>
                                                <TextBlock Text="{Binding AppInfo}" IsHitTestVisible="True" Width="130" Padding="10 0 10 0" TextWrapping="Wrap" Visibility="Collapsed"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Dateien" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Focusable="False" Style="{StaticResource Button.Trans.Over140.Pressed80}" ToolTip="Doppelklick zum Kopieren" Height="30" Width="auto" MouseDoubleClick="FileLink_Click">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <fa:IconImage Icon="File" IconFont="Solid" Height="16" Width="16" Foreground="Gainsboro"/>
                                                <TextBlock Text="{Binding AppFiles}" IsHitTestVisible="False" Visibility="Collapsed"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Optionen" IsReadOnly="True" CanUserResize="False" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button ToolTip="Eintrag bearbeiten" Focusable="False" Margin="5 0 0 0" Style="{StaticResource Button.Trans.Over140.Pressed80}" Height="30" Width="35" Click="RowEditBtn_Click" Visibility="Visible">
                                                <fa:IconImage Icon="Gear" Height="16" Width="16" Foreground="#FFBEDCBE"/>
                                            </Button>
                                            <Button ToolTip="Eintrag kopieren" Focusable="False" Margin="5 0 5 0" Style="{StaticResource Button.Trans.Over140.Pressed80}" Height="30" Width="35" x:Name="CopyRowBtn" Click="CopyRowBtn_Click" Visibility="Visible">
                                                <fa:IconImage Icon="Share" Height="16" Width="16" Foreground="{StaticResource white-220}"/>
                                            </Button>
                                            <Button ToolTip="Eintrag löschen" Focusable="False" Margin="0 0 5 0" Style="{StaticResource Button.Trans.Over140.Pressed80}" Height="30" Width="35" Click="RowDelBtn_Click" Visibility="Visible">
                                                <fa:IconImage Icon="Trash" Height="16" Width="16" Foreground="#FFDCBEBE"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border x:Name="NotifyBorder" IsHitTestVisible="false" Opacity="0" CornerRadius="5 5 5 5" BorderThickness="1" BorderBrush="#FF505050" MaxWidth="300" MinWidth="300" Background="#FF1E1E1E" Grid.Column="0" Grid.ColumnSpan="20" Grid.Row="0" Grid.RowSpan="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 0">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="10 0 0 0" Source="/Assets/Icon/AccountManagerIcon.png" Height="20" Width="20"/>
                        <TextBlock Padding="10" x:Name="NotifyHeaderTxt" Text="Benachrechtigung!" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="pack://application:,,,/assets/fonts/#Poppins" FontSize="14" Foreground="{StaticResource white-220}"/>
                    </StackPanel>
                    <Separator Height="1" Width="280">
                        <Separator.Background>
                            <LinearGradientBrush EndPoint="0.0,1" StartPoint="1.0,0">
                                <GradientStop Color="Transparent"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                                <GradientStop Color="Gainsboro" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Separator.Background>
                    </Separator>
                    <TextBlock Padding="10" x:Name="NotifyTxt" Text="Hallo, ich bin eine Benachrechtigung! Und ich muss dir was ganz ganz dringendes sagen!" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="pack://application:,,,/assets/fonts/#Poppins" FontSize="13" Foreground="{StaticResource white-220}"/>
                </StackPanel>
            </Border>

            <Border x:Name="QuestBoxWindow" HorizontalAlignment="Left" Width="0" IsHitTestVisible="False" Grid.Column="5" Grid.RowSpan="3" Grid.Row="1" CornerRadius="{StaticResource cr-default}" Background="{DynamicResource Border.Secoundary}" BorderBrush="#FF646464" BorderThickness="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <fa:IconImage Grid.Column="1" Grid.Row="1" x:Name="QuestBoxIcon" Icon="Warning" Height="40" Width="40" Foreground="#FFBE8200" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="QuestBoxQuest" Foreground="{StaticResource white-220}" TextWrapping="Wrap" FontSize="13" FontFamily="pack://application:,,,/assets/fonts/#Poppins"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                        <Button Focusable="False" Margin="0 0 20 0" Style="{StaticResource Button.Gray80.Over100}" Height="30" Width="110" IsDefault="True" x:Name="ComfirmQuestBox" Click="ComfirmQuestBox_Click" Visibility="Visible">
                            <fa:IconImage Icon="CheckCircle" Height="20" Width="20" Foreground="green"/>
                        </Button>
                        <Button Focusable="False" Margin="20 0 0 0" Style="{StaticResource Button.Gray80.Over100}" Height="30" Width="110" x:Name="CancelQuestBox" Click="CancelQuestBox_Click" Visibility="Visible">
                            <fa:IconImage Icon="XmarkCircle" Height="20" Width="20" Foreground="Red"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Margin="0 0 5 0" Grid.Row="7" Grid.Column="7" x:Name="AppVersion" Text="v1.0.1" Foreground="{StaticResource Foreground.Secoundary}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</Window>
 