<Window x:Class="Account_Manager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:model="clr-namespace:Account_Manager.Model"
        mc:Ignorable="d"
        Title="Account Manager" 
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Height="900" Width="1600" 
        MinHeight="900" MinWidth="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/DataGrid.xaml"/>
                <ResourceDictionary Source="/Styles/Shared.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <model:ColorConverter x:Key="ColorConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border x:Name="MainBorder" Background="{DynamicResource Border.Primary}" CornerRadius="10" BorderThickness="1" BorderBrush="#FF3C3C3C">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="830"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <Border x:Name="DragBar" MouseDown="DragBar_MouseDown" Background="Transparent" Grid.Column="0" Grid.ColumnSpan="9" Grid.Row="0" Grid.RowSpan="5"></Border>

            <Border x:Name="UserProfilBorder" Grid.Column="1" Grid.RowSpan="3" Grid.Row="1" Background="{StaticResource Border.Secoundary}" CornerRadius="5 5 5 5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button Focusable="False" x:Name="UserProfilImageBorder" Click="UserProfilImageBorder_Click" Height="90" Width="90" Style="{StaticResource Button.Gray80.Over100}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel>
                                <Image x:Name="UserProfilImage" Stretch="UniformToFill" Height="80" Width="80" Cursor="Hand" Visibility="Collapsed"/>
                                <fa:IconImage x:Name="DefualtUserProfilImage" Icon="UserCircle" Height="80" Width="80" Cursor="Hand" IconFont="Solid" Foreground="{StaticResource white-220}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 0">
                        <TextBlock x:Name="Username" Text="Luzifer" FontWeight="Normal" TextWrapping="WrapWithOverflow" Foreground="{StaticResource white-220}" FontSize="14" FontFamily="pack://application:,,,/assets/fonts/#Poppins" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0 0 0 0">
                        <TextBlock x:Name="StoredAccounts" Text="666 Accounts" Foreground="{StaticResource Foreground.Detail}" FontSize="12" FontFamily="pack://application:,,,/assets/fonts/#Poppins" />
                    </StackPanel>

                    <Button Focusable="False" ToolTip="Abmelden" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" x:Name="SignOutBtn" Click="SignOutBtn_Click" Style="{StaticResource Button.Gray80.Over100}" Width="120" Height="30" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <fa:IconImage Icon="SignOut" Foreground="{StaticResource white-220}" Width="15" Height="15"/>
                            <Label Content="Abmelden" Foreground="{StaticResource white-220}" FontSize="12" FontFamily="pack://application:,,,/assets/fonts/#Poppins" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Border x:Name="UserSettingsWindow" HorizontalAlignment="Left" Width="0" IsHitTestVisible="False" Grid.Column="5" Grid.RowSpan="3" Grid.Row="1" CornerRadius="{StaticResource cr-default}" Background="{DynamicResource Border.Secoundary}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="UserSettingsBox_1" Visibility="Visible" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Background="{DynamicResource gray-80}" CornerRadius="{StaticResource cr-default}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Border Margin="0 10 0 0" Height="30" Width="195" ToolTip="Benutername" CornerRadius="{StaticResource cr-5}" Background="Gainsboro">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock x:Name="CurrentUsername" Height="auto" Width="165" Padding="5" FontSize="12" Foreground="{DynamicResource Foreground.Secoundary}" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Background="Transparent"/>
                                        <fa:IconImage Icon="UserCircle" IconFont="Solid" Height="20" Width="20" Foreground="{StaticResource gray-30}"/>
                                    </StackPanel>
                                </Border>


                            <Border Margin="0 10 0 0" Height="30" Width="195" ToolTip="E-Mail" CornerRadius="{StaticResource cr-5}" Background="Gainsboro">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBox VerticalContentAlignment="Center" x:Name="CurrentEmail" Padding="5" Height="30" Width="165" Background="Transparent" BorderThickness="0"/>
                                    <fa:IconImage Icon="MailBulk" IconFont="Solid" Height="20" Width="20" Foreground="{StaticResource gray-30}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border x:Name="UserSettingsBox_2" Visibility="Visible" Grid.Column="3" Grid.Row="1" Grid.RowSpan="3" Background="{DynamicResource gray-80}" CornerRadius="{StaticResource cr-default}">
                        <StackPanel Orientation="Vertical">
                            <Border Margin="0 10 0 0" Height="30" Width="195" ToolTip="Neues Passwort" CornerRadius="{StaticResource cr-5}" Background="Gainsboro">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <PasswordBox VerticalContentAlignment="Center" x:Name="CurrentPassword" Height="30" Padding="5" Width="165" Background="Transparent" BorderThickness="0"/>
                                    <fa:IconImage Icon="Key" IconFont="Solid" Height="20" Width="20" Foreground="{StaticResource gray-30}"/>
                                </StackPanel>
                            </Border>

                            <Border Margin="0 10 0 0" Height="30" Width="195" ToolTip="Neues Passwort wiederholen" CornerRadius="{StaticResource cr-5}" Background="Gainsboro">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <PasswordBox VerticalContentAlignment="Center" x:Name="RepeatPassword" Height="30" Width="165" Padding="5" Background="Transparent" BorderThickness="0"/>
                                    <fa:IconImage Icon="Recycle" IconFont="Solid" Height="20" Width="20" Foreground="{StaticResource gray-30}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Button Focusable="False" x:Name="DumpThisDataBase" ToolTip="Datenbank Exportieren" Click="DumpThisDataBase_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="5" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40">
                        <fa:IconImage Icon="Database" Foreground="Gainsboro" Height="20" Width="20"/>
                    </Button>

                    <Button Focusable="False" x:Name="DeleteDataBase" ToolTip="Datenbank löschen" Click="DeleteDataBase_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="5" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="40">
                        <fa:IconImage Icon="Trash" Foreground="Gainsboro" Height="20" Width="20"/>
                    </Button>


                    <Button Focusable="False" x:Name="CreateDatabaseBackup" ToolTip="Backup erstellen" Click="CreateDatabaseBackup_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="7" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40">
                        <fa:IconImage Icon="CloudArrowDown" Foreground="Gainsboro" Height="20" Width="20"/>
                    </Button>

                    <Button Focusable="False" x:Name="LoadDatabaseBackup" ToolTip="Backup Laden" Click="LoadDatabaseBackup_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="7" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="40">
                        <fa:IconImage Icon="CloudArrowUp" Foreground="Gainsboro" Height="20" Width="20"/>
                    </Button>


                    <Button Focusable="False" x:Name="ExportCSV" ToolTip="CSV erstellen" Click="ExportCSV_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="9" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40">
                        <fa:IconImage Icon="FileExport" Foreground="Gainsboro" Height="20" Width="20"/>
                    </Button>

                    <Button Focusable="False" x:Name="ImportCSV" ToolTip="CSV Laden" Click="ImportCSV_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="9" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="40">
                        <fa:IconImage Icon="FileImport" Foreground="Gainsboro" Height="20" Width="20"/>
                    </Button>

                    <ToggleButton Style="{StaticResource ToggleButton.Checked100.Unchecked80}" Focusable="False" x:Name="SortAZ" Checked="SortAZ_Checked" Unchecked="SortAZ_Unchecked" ToolTip="Sortieren" Grid.Column="11" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40">
                        <fa:IconImage Icon="ArrowDownAZ" Foreground="Gainsboro" Height="20" Width="20"/>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource ToggleButton.Checked100.Unchecked80}" Focusable="False" x:Name="ShowInfo" Checked="ShowInfo_Checked" Unchecked="ShowInfo_Unchecked" ToolTip="Info Anzeigen" Grid.Column="13" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40">
                        <fa:IconImage Icon="Eye" Foreground="Gainsboro" Height="20" Width="20"/>
                    </ToggleButton>

                    <Button Focusable="False" x:Name="AutosavePath" ToolTip="Autosave-Pfad" Click="AutosavePath_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="11" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="40">
                        <fa:IconImage x:Name="AutoSaveIcon" Icon="Save" Foreground="Gainsboro" Height="20" Width="20"/>

                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="DeaktivateAutosave" Header="Autosave Deaktivieren" Click="DeaktivateAutosave_Click"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <Button Focusable="False" x:Name="CostumBorderColor" ToolTip="Fensterfarbe anpassen" Click="CostumBorderColor_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="13" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Bottom" Height="40">
                        <fa:IconImage Icon="EyeDropper" Height="20" Width="20" Foreground="{StaticResource white-220}"/>
                    </Button>

                    <Button Focusable="False" x:Name="SaveUserSettings" Click="SaveUserSettings_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="15" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Top" Height="40">
                        <TextBlock Text="Speichern" FontSize="12" FontFamily="pack://application:,,,/assets/fonts/#Poppins"/>
                    </Button>

                    <Button Focusable="False" x:Name="CloseUserSettings" Click="CloseUserSettings_Click" Style="{StaticResource Button.Gray80.Over100}" Grid.Column="15" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Bottom" Height="40">
                        <TextBlock Text="Schließen" FontSize="12" FontFamily="pack://application:,,,/assets/fonts/#Poppins"/>
                    </Button>
                </Grid>
            </Border>

            <Border x:Name="AddDelLockBorder" Grid.Column="3" Grid.Row="1" Grid.RowSpan="3">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                    <StackPanel>
                        <Button Focusable="False" x:Name="AddAccountBtn" ToolTip="Eintrag hinzufügen" Click="AddAccountBtn_Click" Style="{StaticResource Button.Gray60.Over80}" Width="30" Height="30" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <fa:IconImage Icon="Plus" Foreground="Green" Width="15" Height="15"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="0 10 0 10">
                        <Button Focusable="False" x:Name="PasswordGenerationBtn" ToolTip="Passwort generieren" Click="PasswordGenerationBtn_Click" Style="{StaticResource Button.Gray60.Over80}" Width="30" Height="30" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <fa:IconImage Icon="Lock" Foreground="{StaticResource white-220}" Width="15" Height="15"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel>
                        <Button Focusable="False" x:Name="UserSettings" Click="UserSettings_Click" ToolTip="Statistik" Style="{StaticResource Button.Gray60.Over80}" Width="30" Height="30" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <fa:IconImage Icon="Gear" Foreground="{StaticResource white-220}" Width="15" Height="15"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border x:Name="AddWindow" HorizontalAlignment="Left" Width="0" IsHitTestVisible="False" Grid.Column="5" Grid.RowSpan="3" Grid.Row="1" CornerRadius="{StaticResource cr-default}" Background="{DynamicResource Border.Secoundary}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>


                    <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Anwendung" Foreground="Gray" x:Name="Tb_app" GotFocus="Tb_app_GotFocus" LostFocus="Tb_app_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="1" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Website" Foreground="Gray" x:Name="Tb_link" GotFocus="Tb_link_GotFocus" LostFocus="Tb_link_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20"/>
                        </StackPanel>
                    </Border>


                    <Border Grid.Column="1" Grid.Row="2" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Benutzername" x:Name="Tb_appusername" GotFocus="Tb_appusername_GotFocus" LostFocus="Tb_appusername_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20" Foreground="Gray"/>
                        </StackPanel>
                    </Border>


                    <Border x:Name="Tb_apppassword_pwSafty" Grid.Column="1" Grid.Row="3" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Bottom">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox TextChanged="Tb_apppassword_TextChanged" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Passwort" x:Name="Tb_apppassword" GotFocus="Tb_apppassword_GotFocus" LostFocus="Tb_apppassword_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="2" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="E-Mail" x:Name="Tb_appemail" GotFocus="Tb_appemail_GotFocus" LostFocus="Tb_appemail_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20" Foreground="Gray"/>
                        </StackPanel>
                    </Border>


                    <Border x:Name="Tb_appemailpassword_pwSafty" Grid.Column="3" Grid.Row="3" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Bottom">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox TextChanged="Tb_appemailpassword_TextChanged" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="E-Mail Passwort" x:Name="Tb_appemailpassword" GotFocus="Tb_appemailpassword_GotFocus" LostFocus="Tb_appemailpassword_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="5" Grid.Row="1" Grid.RowSpan="2" Height="57.5" Width="160" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" Padding="5" Text="Info" x:Name="Tb_appinfo" GotFocus="Tb_appinfo_GotFocus" LostFocus="Tb_appinfo_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" TextWrapping="Wrap" Width="160" Height="60" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="5" Grid.Row="3" Height="25" Width="160" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Bottom">
                        <StackPanel VerticalAlignment="Center">
                            <ComboBox x:Name="Cb_appTag" Style="{StaticResource ComboBoxFlatStyle}" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Padding="5" Height="25" Width="155" HorizontalAlignment="Right" BorderThickness="0">
                                <ComboBoxItem IsEnabled="False" Visibility="Collapsed" IsSelected="True" Foreground="Gray" FontFamily="pack://application:,,,/assets/fonts/#Poppins" FontStyle="Italic">Kategorie</ComboBoxItem>
                                <ComboBoxItem Content="Spiele"/>
                                <ComboBoxItem Content="Soziale Medien"/>
                                <ComboBoxItem Content="Streaming"/>
                                <ComboBoxItem Content="Shopping"/>
                                <ComboBoxItem Content="Finanzen"/>
                                <ComboBoxItem Content="Sonstige"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <Button Focusable="False" x:Name="StoreFile" ToolTip="Datei angängen" Click="StoreFile_Click"  Grid.Column="6" Grid.Row="1" Grid.RowSpan="2" Style="{StaticResource Button.Gray80.Over100}" Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <fa:IconImage x:Name="StoreFileIcon" Icon="File" Height="25" Width="25" Foreground="{StaticResource white-220}"/>
                        </StackPanel>
                    </Button>

                    <Button Focusable="False" x:Name="ColorPickerBtn" ToolTip="Farblich markieren" Click="ColorPicker_Click"  Grid.Column="6" Grid.Row="2" Grid.RowSpan="2" Margin="0 0 0 0" Style="{StaticResource Button.Gray80.Over100}" Width="40" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <fa:IconImage x:Name="ColorPickerIcon" Icon="EyeDropperEmpty" Height="25" Width="25" Foreground="{StaticResource white-220}"/>
                        </StackPanel>
                    </Button>

                    <Button Focusable="False" x:Name="AccountAddBtn" Click="AccountAddBtn_Click"  Grid.Column="7" Grid.Row="1" Grid.RowSpan="2" Margin="0 0 0 10" Style="{StaticResource Button.Gray80.Over100}" Width="100" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Label Content="Speichern" Foreground="{StaticResource white-220}" FontSize="12" FontFamily="pack://application:,,,/assets/fonts/#Poppins"/>
                        </StackPanel>
                    </Button>

                    <Button Focusable="False" x:Name="AccountAddCancelBtn" Click="AccountAddCancelBtn_Click" Grid.Column="7" Grid.Row="2" Grid.RowSpan="2" Style="{StaticResource Button.Gray80.Over100}" Width="100" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Label Content="Schließen" Foreground="{StaticResource white-220}" FontSize="12" FontFamily="pack://application:,,,/assets/fonts/#Poppins"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Border x:Name="EditWindow" HorizontalAlignment="Left" Width="0" IsHitTestVisible="False" Grid.Column="5" Grid.RowSpan="3" Grid.Row="1" CornerRadius="{StaticResource cr-default}" Background="{DynamicResource Border.Secoundary}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Anwendung" Foreground="Gray" x:Name="Tb_app_edit" GotFocus="Tb_app_edit_GotFocus" LostFocus="Tb_app_edit_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="1" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Website" Foreground="Gray" x:Name="Tb_link_edit" GotFocus="Tb_link_edit_GotFocus" LostFocus="Tb_link_edit_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="2" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Text="Benutzername" x:Name="Tb_appusername_edit" GotFocus="Tb_appusername_edit_GotFocus" LostFocus="Tb_appusername_edit_LostFocus" FontStyle="Italic" FontFamily="pack://application:,,,/assets/fonts/#Poppins" Width="200" Height="20" Foreground="Gray"/>
                        </StackPanel>
                    </Border>


                    <Border x:Name="Tb_apppassword_pwSafty_edit" Grid.Column="1" Grid.Row="3" Height="25" Width="210" CornerRadius="{StaticResource cr-5}" Background="Gainsboro" VerticalAlignment="Bottom">
                        <StackPanel VerticalAlignment="Center">
